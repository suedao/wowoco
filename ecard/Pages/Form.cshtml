@page
@model FormModel
@{
    ViewBag.meta_title = "Form";
    ViewBag.meta_keywords = "";

}


<div class="container">
    <h3> Send an e-Card to a Your Friend </h3>

    <form>
        <div class="form-group">
            <label for="friendsname" sr-only="friendsname">
                Friend's Name:
            </label>
            <input name="friendsname" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label for="friendsemail" sr-only="friendsemail">
                Friend's Email:
            </label>
            <input name="friendsemail" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label for="subject" sr-only="subject">
                Subject:
            </label>
            <input name="subject" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label for="message" sr-only="message">
                Message:
            </label>
            <textarea name="message" class="form-control" maxlength="50">
            </textarea>
            Max characters = 50

            <div class="countdown"></div>
            <br />
        </div>

        <div class="form-group">
            <label for="sendername" sr-only="sendername">
                Sender's Name:
            </label>
            <input name="sendersname" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label for="senderemail" sr-only="senderemail">
                Sender's Email:
            </label>
            <input name="sendersemail" type="text" class="form-control" />
        </div>

        <button type="button" class="btn btn-primary" sr-only="submit">
            Submit
        </button>

    </form>
    <br />

    <div class="g-recaptcha" data-sitekey="6LfHqEUUAAAAAMnaom8RJJPKTrutcg24BVol_6Pr">
    </div>

</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<!--BEGIN TEXTAREA AUTOSIZE-->

@section scripts {
    <script src="~/lib/textarea-autosize/dist/jquery.textarea_autosize.js"></script>
    <script>
        $('textarea.js-auto-size').textareaAutoSize();
    </script>

    <!--END TEXTAREA AUTOSIZE-->


    <script src="~/lib/textarea-countdown.js"></script>

    <script src='https://www.google.com/recaptcha/api.js'></script>
}

